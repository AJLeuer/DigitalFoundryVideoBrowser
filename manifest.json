{
    "manifest_version": 2,
    "name": "Digital Foundry Video Browser",
    "version": "1.0",

    "description": "Offers an easily navigable interface for viewing available videos on Digital Foundry's video-hosting site - digitalfoundry.net",

    "icons":
    {
        "48": "Icons/Game Controller (48x48).png",
        "96": "Icons/Game Controller (96x96).png"
    },

    "permissions":
    [
        "*://*.digitalfoundry.net/*",
        "https://*.w3schools.com/*"
    ],

    "content_security_policy": "script-src 'self' https://*.w3schools.com; object-src 'self'",

    "background":
    {
        "scripts":
        [
        ]
    },

    "browser_action":
    {
        "default_icon":  "Icons/Game Controller (32x32).png",
        "default_title": "Digital Foundry Videos",
        "default_popup": "MainView.html"
    }
}